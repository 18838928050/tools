set number
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set history=1000
set mouse=a
set autoindent
set autoread
set ruler
set ignorecase
set incsearch
set nobackup
set nowb
set noswapfile

nnoremap <CR> G
nnoremap <BS> gg

let mapleader=" "
nnoremap <leader>w :w!<cr>
noremap <leader>j <c-w>j
noremap <leader>k <c-w>k
noremap <leader>h <c-w>h
noremap <leader>l <c-w>l
noremap <leader>d <c-d>
noremap <leader>u <c-u>
noremap <leader>f <c-f>
noremap <leader>b <c-b>

map j gj
map k gk

